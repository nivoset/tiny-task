{
  "name": "@tiny/ecosystem",
  "version": "1.0.0",
  "description": "A collection of lightweight, modular utilities",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "release": "node scripts/release.js"
  },
  "keywords": [
    "tiny",
    "utilities",
    "task",
    "flow",
    "parallel",
    "typescript",
    "async",
    "pipeline",
    "workflow",
    "concurrency"
  ],
  "author": "bbrwfk",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nivoset/tiny-task.git"
  },
  "bugs": {
    "url": "https://github.com/nivoset/tiny-task/issues"
  },
  "homepage": "https://github.com/nivoset/tiny-task#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "pino-pretty": "^10.3.1",
    "cross-env": "^7.0.3"
  },
  "dependencies": {
    "@tiny/core": "workspace:*",
    "@tiny/task": "workspace:*",
    "@tiny/parallel": "workspace:*",
    "@tiny/flow": "workspace:*",
    "@tiny/logger": "workspace:*"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
